<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <TargetName>Microsoft.NET.Sdk.MaciOS.Workload</TargetName>
  </PropertyGroup>
  <ItemGroup>
    <!-- Shorten package names to avoid long path caching issues in Visual Studio -->
    <ShortNames Include="microsoft.ios;Microsoft.iOS">
      <Replacement>XI</Replacement>
    </ShortNames>
    <ShortNames Include="microsoft.maccatalyst;Microsoft.MacCatalyst">
      <Replacement>XMC</Replacement>
    </ShortNames>
    <ShortNames Include="microsoft.ios.runtime;Microsoft.iOS.Runtime">
      <Replacement>XIRT</Replacement>
    </ShortNames>
    <ShortNames Include="microsoft.maccatalyst.runtime;Microsoft.MacCatalyst.Runtime">
      <Replacement>XMCRT</Replacement>
    </ShortNames>
    <ComponentResources Include="ios" Category=".NET" Title=".NET iOS Workload" Description="Microsoft iOS SDK for .NET"/>
    <ComponentVersions Include="ios" Version="@IOS_WORKLOAD_VERSION@" />
    <ComponentResources Include="maccatalyst" Category=".NET" Title=".NET MacCatalyst Workload" Description="Microsoft MacCatalyst SDK for .NET "/>
    <ComponentVersions Include="maccatalyst" Version="@MACCATALYST_WORKLOAD_VERSION@" />
    <ComponentResources Include="tvos" Category=".NET" Title=".NET tvOS Workload" Description="Microsoft tvOS SDK for .NET"/>
    <ComponentVersions Include="tvos" Version="@TVOS_WORKLOAD_VERSION@" />
  </ItemGroup>
</Project>
